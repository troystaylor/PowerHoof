{
  "name": "powerhoof",
  "version": "0.1.0",
  "description": "Azure-native AI agent with Nushell execution for token-efficient task automation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "start:clean": "node scripts/kill-port.js && npm run start",
    "start:dev:clean": "node scripts/kill-port.js && npm run start:dev",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rimraf dist",
    "sbom": "cyclonedx-npm --output-file sbom.json",
    "audit": "npm audit --audit-level=moderate",
    "security": "npm run audit && npm run sbom",
    "precommit": "npm run lint && npm run test:run && npm run security"
  },
  "keywords": [
    "ai",
    "agent",
    "azure",
    "nushell",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@azure/cosmos": "^4.2.0",
    "@azure/identity": "^4.5.0",
    "@azure/keyvault-secrets": "^4.9.0",
    "@azure/monitor-opentelemetry": "^1.7.0",
    "@azure/openai": "^2.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@opentelemetry/api": "^1.9.0",
    "express": "^4.21.0",
    "foundry-local-sdk": "^0.5.0",
    "helmet": "^8.1.0",
    "jose": "^6.1.3",
    "openai": "^4.104.0",
    "ws": "^8.18.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^4.1.2",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^10.0.2",
    "rimraf": "^6.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
